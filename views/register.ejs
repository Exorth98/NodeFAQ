<%- include("_header",{stylesheet:"login",title:"Register"}) -%>

<h1>Register</h1>

<% if (feedback){ %>
  <div id="feedback">
    <p id ="feedback-text"><%=feedback%></p>
  </div>
<%}%>

<form class="" action="/register" method="POST">
    <div class="form-horizontal">

          <div class="form-group row">
            <label class="col-form-label col-sm-2" for="Question">Email</label>
            <div class="col-sm-5">
              <input type="email" class="form-control" name="Email"/>
            </div>
          </div>

          <div class="form-group row">
            <label class="col-form-label col-sm-2" for="Question">Nickname</label>
            <div class="col-sm-5">
              <input type="text" class="form-control" name="Nickname"/>
            </div>
          </div>
          
          <div class="form-group row">
            <label class="col-form-label col-sm-2" for="Answer">Password</label>
            <div class="col-sm-5">
              <input type="password" class="form-control" name="Password"/>
            </div>
          </div>

          <div class="form-group row">
            <label class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
              <input type="submit" value="Login" class="btn btn-default btn-success" />
            </div>
          </div>

          <a href="/login">Already register, login here</a>

    </div>
</form>

<%- include("_footer") -%>